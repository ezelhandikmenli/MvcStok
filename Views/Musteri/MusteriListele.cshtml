@model List<MvcStok.Models.Entitiy.TBLMUSTERI>
@{
    ViewBag.Title = "MusteriListele";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Müşteri ID</th>
            <th>Müşteri Adı</th>
            <th>Müşteri Soyadı</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MUSTERIID</td>
                <td>@item.MUSTERIAD</td>
                <td>@item.MUSTERISOYAD</td>
                <td><a href="/Musteri/Sil/@item.MUSTERIID/" class="btn btn-danger">SİL</a></td>
                <td><a href="/Musteri/Guncelle/@item.MUSTERIID/" class="btn btn-success">Güncelle</a>
            </tr>
        }
    </tbody>
</table>
<a href="#" class="btn btn-primary">Müşteri Ekle</a>
@using MvcStok.Models.Entitiy
@model List<TBLURUNLER>
@{
    ViewBag.Title = "UrunList";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün ID</th>
            <th>Ürün Ad</th>
            <th>Marka</th>
            <th>Ürün Kategori</th>
            <th>Fiyat</th>
            <th>Stok</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.URUNID</td>
                <td>@item.URUNAD</td>
                <td>@item.MARKA</td>
                <td>@item.TBLKATEGORI.KATEGORIAD</td>
                <td>@item.FIYAT</td>
                <td>@item.STOK</td>
                <td><a href="/Urun/Sil/@item.URUNID" class="btn btn-danger">Sil</a> </td> 
                <td><a href="/Urun/Guncelle/@item.URUNID" class="btn btn-success">Güncelle</a></td>  
            </tr>
        }
    </tbody>
</table>
<a href="/URUN/UrunEkle/" class="btn btn-primary">Ürün Ekle</a>

